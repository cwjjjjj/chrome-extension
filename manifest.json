{
  "manifest_version": 3,
  "name": "CRXJS React Vite Example",
  "version": "1.0.1",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "js": ["src/content/index.tsx"],
      "matches": ["http://*/*", "https://*/*", "<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "src/background"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "tabGroups",
    "<all_urls>"
  ]
}
